<Window x:Class="TeamTeslaGo.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Smart Cart Command Center" Height="720" Width="1280"
        WindowStartupLocation="CenterScreen">

    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#1A1A2E" Offset="0.0"/>
            <GradientStop Color="#0F0F14" Offset="1.0"/>
        </LinearGradientBrush>
    </Window.Background>

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Foreground" Value="#E0E0FF"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Border x:Name="Shadow" Background="Transparent" CornerRadius="8" Margin="-2">
                                <Border.Effect>
                                    <DropShadowEffect Color="#00A8FF" BlurRadius="15" ShadowDepth="0" Opacity="0.4"/>
                                </Border.Effect>
                            </Border>
                            <Border x:Name="Border" CornerRadius="8" BorderThickness="1" BorderBrush="#00A8FF">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                        <GradientStop Color="#2A2A3E" Offset="0"/>
                                        <GradientStop Color="#1E1E2E" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#3A3A5E"/>
                                <Setter TargetName="Border" Property="BorderBrush" Value="#40CFFF"/>
                                <Setter TargetName="Shadow" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#40CFFF" BlurRadius="20" ShadowDepth="0" Opacity="0.7"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#005A9E"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="StopButtonStyle" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Border x:Name="Shadow" Background="Transparent" CornerRadius="8" Margin="-2">
                                <Border.Effect>
                                    <DropShadowEffect Color="#FF2A2A" BlurRadius="15" ShadowDepth="0" Opacity="0.4"/>
                                </Border.Effect>
                            </Border>
                            <Border x:Name="Border" CornerRadius="8" BorderThickness="1" BorderBrush="#FF4A4A">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                        <GradientStop Color="#3E2A2A" Offset="0"/>
                                        <GradientStop Color="#2E1E1E" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#5E3A3A"/>
                                <Setter TargetName="Border" Property="BorderBrush" Value="#FF6A6A"/>
                                <Setter TargetName="Shadow" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#FF6A6A" BlurRadius="20" ShadowDepth="0" Opacity="0.7"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#9E0000"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SideHeaderStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#00A8FF"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,25,0,8"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#00A8FF" BlurRadius="5" ShadowDepth="0" Opacity="0.5"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="StatusLabelStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#A0A0C0"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Margin" Value="0,5,0,0"/>
        </Style>

        <Style x:Key="StatusValueStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="White" BlurRadius="3" ShadowDepth="0" Opacity="0.3"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="300"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Row="0" Grid.ColumnSpan="2" Background="#1E1E2E" BorderBrush="#00A8FF" BorderThickness="0,0,0,1" Padding="10">
            <Border.Effect>
                <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="2" Opacity="0.5"/>
            </Border.Effect>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="BtnStart" Content="▶ 시스템 시작" Click="BtnStart_Click" Width="140"/>
                <Button x:Name="BtnSelectTarget" Content="🎯 타겟 선택" Click="BtnSelectTarget_Click" Width="140"/>
                <Button x:Name="BtnChangeTarget" Content="🔄 타겟 변경" Click="BtnChangeTarget_Click" Width="140"/>
                <Button x:Name="BtnStop" Content="⏹ 시스템 종료" Click="BtnStop_Click" Width="140" Style="{StaticResource StopButtonStyle}"/>
            </StackPanel>
        </Border>

        <Border Grid.Row="1" Grid.Column="0" Margin="20" CornerRadius="15" BorderBrush="#00A8FF" BorderThickness="2" Background="Black">
            <Border.Effect>
                <DropShadowEffect Color="#00A8FF" BlurRadius="20" ShadowDepth="0" Opacity="0.3"/>
            </Border.Effect>
            <Grid>
                <Rectangle Fill="#00A8FF" Height="2" VerticalAlignment="Top" Opacity="0.2">
                    <Rectangle.Triggers>
                        <EventTrigger RoutedEvent="Loaded">
                            <BeginStoryboard>
                                <Storyboard RepeatBehavior="Forever">
                                    <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)" From="0" To="600" Duration="0:0:2"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </Rectangle.Triggers>
                    <Rectangle.RenderTransform>
                        <TranslateTransform/>
                    </Rectangle.RenderTransform>
                </Rectangle>

                <Image x:Name="CameraView" Stretch="Uniform" MouseLeftButtonDown="CameraView_MouseLeftButtonDown"/>

                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="CAMERA FEED OFFLINE" Foreground="#00A8FF" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Opacity="0.7">
                        <TextBlock.Effect>
                            <DropShadowEffect Color="#00A8FF" BlurRadius="10" ShadowDepth="0"/>
                        </TextBlock.Effect>
                    </TextBlock>
                    <TextBlock Text="Waiting for connection..." Foreground="#A0A0C0" FontSize="16" HorizontalAlignment="Center" Margin="0,10,0,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <Border Grid.Row="1" Grid.Column="1" BorderBrush="#3E3E4E" BorderThickness="1,0,0,0">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1" Opacity="0.8">
                    <GradientStop Color="#252530" Offset="0"/>
                    <GradientStop Color="#1E1E2E" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <StackPanel Margin="25">

                <TextBlock Text="STATUS MONITOR" Foreground="White" FontSize="22" FontWeight="ExtraBold" HorizontalAlignment="Center" Margin="0,0,0,30">
                    <TextBlock.Effect>
                        <DropShadowEffect Color="White" BlurRadius="8" ShadowDepth="0" Opacity="0.5"/>
                    </TextBlock.Effect>
                </TextBlock>

                <TextBlock Text="DEVICE CONNECTION" Style="{StaticResource SideHeaderStyle}"/>

                <StackPanel Orientation="Vertical">
                    <TextBlock Text="Arduino Unit" Style="{StaticResource StatusLabelStyle}"/>
                    <Grid>
                        <TextBlock x:Name="TxtArduinoStatus" Text="Disconnected" Foreground="#FF4A4A" Style="{StaticResource StatusValueStyle}"/>
                        <Border x:Name="LedArduino" Width="12" Height="12" CornerRadius="6" Background="#FF4A4A" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,10,15">
                            <Border.Effect>
                                <DropShadowEffect Color="#FF4A4A" BlurRadius="8" ShadowDepth="0"/>
                            </Border.Effect>
                        </Border>
                    </Grid>

                    <TextBlock Text="Camera Feed" Style="{StaticResource StatusLabelStyle}"/>
                    <Grid>
                        <TextBlock x:Name="TxtCameraStatus" Text="OFFLINE" Foreground="#FF4A4A" Style="{StaticResource StatusValueStyle}"/>
                        <Border x:Name="LedCamera" Width="12" Height="12" CornerRadius="6" Background="#FF4A4A" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,10,15">
                            <Border.Effect>
                                <DropShadowEffect Color="#FF4A4A" BlurRadius="8" ShadowDepth="0"/>
                            </Border.Effect>
                        </Border>
                    </Grid>
                </StackPanel>

                <TextBlock Text="OPERATION MODE" Style="{StaticResource SideHeaderStyle}"/>
                <Border Background="#1A1A24" CornerRadius="8" Padding="15" Margin="0,5,0,15" BorderBrush="#00A8FF" BorderThickness="1">
                    <Border.Effect>
                        <DropShadowEffect Color="#00A8FF" BlurRadius="10" ShadowDepth="0" Opacity="0.2"/>
                    </Border.Effect>
                    <TextBlock x:Name="TxtCurrentMode" Text="IDLE" Foreground="#FFD700" FontSize="28" FontWeight="Bold" HorizontalAlignment="Center">
                        <TextBlock.Effect>
                            <DropShadowEffect Color="#FFD700" BlurRadius="15" ShadowDepth="0"/>
                        </TextBlock.Effect>
                    </TextBlock>
                </Border>

                <TextBlock Text="POWER LEVEL" Style="{StaticResource SideHeaderStyle}"/>
                <Grid Margin="0,5,0,10">
                    <ProgressBar x:Name="PbBattery" Height="24" Value="75" Background="#1A1A24" Foreground="#00E676" BorderThickness="0">
                        <ProgressBar.Effect>
                            <DropShadowEffect Color="#00E676" BlurRadius="8" ShadowDepth="0" Opacity="0.3"/>
                        </ProgressBar.Effect>
                    </ProgressBar>
                    <TextBlock x:Name="TxtBatteryLevel" Text="75 %" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White" FontWeight="Bold" FontSize="14">
                        <TextBlock.Effect>
                            <DropShadowEffect Color="Black" BlurRadius="2" ShadowDepth="1" Opacity="0.8"/>
                        </TextBlock.Effect>
                    </TextBlock>
                </Grid>

                <TextBlock Text="SYSTEM LOG" Style="{StaticResource SideHeaderStyle}" Margin="0,25,0,8"/>
                <Border Background="#15151A" Height="160" CornerRadius="5" BorderBrush="#3E3E4E" BorderThickness="1" Padding="5">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <TextBlock x:Name="TxtSystemLog" Text="> System initialized.&#x0a;> Waiting for user input..." Foreground="#00E676" FontFamily="Consolas" FontSize="13" TextWrapping="Wrap"/>
                    </ScrollViewer>
                </Border>

            </StackPanel>
        </Border>
    </Grid>
</Window>